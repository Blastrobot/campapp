<% layout("/layouts/boilerplate") %>
<div class="row">
  <div class="col-6 offset-3">
    <div class="card">
      <img src="<%=campground.image%>" class="card-img-top" alt="..." />
      <div class="card-body">
        <h5 class="card-title">
          <%=campground.title%>
        </h5>
        <p class="card-text">
          <%=campground.description%>
        </p>
      </div>
      <div class="list-group list-group-flush">
        <div class="list-group-item text-secondary d-flex">
          <div class="me-auto">
            <%=campground.location%>
          </div>
          <div class="ms-auto">â‚¬ <%=campground.price%>/night</div>
        </div>
      </div>
      <div class="card-body d-flex">
        <a href="/campgrounds/<%=campground._id%>/edit" class="card-link btn btn-info">Edit</a>
        <form class="d-inline" action="/campgrounds/<%=campground._id%>?_method=DELETE" method="POST">
          <button class="btn btn-danger">Delete</button>
        </form>
        <a class="card-link btn btn-info ms-auto" href="/campgrounds">Back ðŸ¤¯</a>
      </div>
    </div>
    <h5>Leave a review!</h5>
    <form action="/campgrounds/<%=campground._id%>/reviews" method="POST" class="mb-3">
      <div class="mb-3">
        <label class="form-label" for="rating">Rating</label>
        <input class="form-range" type="range" min="1" max="5" name="range" id="rating" />
      </div>
      <div class="mb-3">
        <label class="form-label" for="body">Review</label>
        <textarea class="form-control" name="review[body]" id="body" cols="30" rows="10"></textarea>
      </div>
      <button class="btn btn-success">Submit</button>
    </form>
  </div>
</div>