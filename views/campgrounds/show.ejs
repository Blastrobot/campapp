<% layout("/layouts/boilerplate") %>
<div class="row">
  <div class="col-6">
    <div class="card">
      <img src="<%=campground.image%>" class="card-img-top" alt="..." />
      <div class="card-body">
        <h5 class="card-title">
          <%=campground.title%>
        </h5>
        <p class="card-text">
          <%=campground.description%>
        </p>
      </div>
      <div class="list-group list-group-flush">
        <div class="list-group-item text-secondary d-flex">
          <div class="me-auto">
            <%=campground.location%>
          </div>
          <div class="ms-auto">â‚¬ <%=campground.price%>/night</div>
        </div>
        <div class="list-group-item">Posted by <%=campground.author.username%></div>
      </div>

      <div class="card-body d-flex">
        <% if( currentUser && campground.author.equals(currentUser._id)) { %>
        <a href="/campgrounds/<%=campground._id%>/edit" class="card-link btn btn-info">Edit</a>
        <form class="d-inline" action="/campgrounds/<%=campground._id%>?_method=DELETE" method="POST">
          <button class="btn btn-danger">Delete</button>
        </form>
        <% } %>
        <a class="card-link btn btn-info ms-auto" href="/campgrounds">Back ðŸ¤¯</a>
      </div>
    </div>
  </div>
  <div class="col-6">
    <% if (currentUser) {%>
    <h5>Leave a review!</h5>
    <form action="/campgrounds/<%=campground._id%>/reviews" method="POST" class="mb-3 validation-form" novalidate>
      <div class="mb-3">
        <label class="form-label" for="rating">Rating</label>
        <input class="form-range" type="range" min="1" max="5" name="review[rating]" id="rating" />
      </div>
      <div class="mb-3">
        <label class="form-label" for="body">Review</label>
        <textarea class="form-control" name="review[body]" id="body" cols="30" rows="3" required></textarea>
        <div class="invalid-feedback">
          Please provide a valid review.
        </div>
      </div>
      <button class="btn btn-success">Submit</button>
    </form>
    <% } %>
    <% for(let review of campground.reviews) { %>
    <div class="card mb-3">
      <div class="card-body">
        <h6 class="card-title">Rating: <%=review.rating%></h6>
        <h6 class="card-subtitle mb-2 text-secondary">By <%= review.author.username %></h6>
        <p class="card-text">Review: <%=review.body%></p>
        <% if( currentUser && review.author.equals(currentUser._id)) { %>
        <form action="/campgrounds/<%=campground._id%>/reviews/<%=review._id%>?_method=DELETE" method="POST">
          <button class="btn btn-sm btn-danger">ðŸ—‘</button>
        </form>
        <% } %>
      </div>
    </div>
    <% } %>

  </div>
</div>