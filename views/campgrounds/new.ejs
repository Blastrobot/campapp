<% layout("/layouts/boilerplate") %>
<div class="row">
  <h1 class="text-center">New Campground</h1>
  <div class="col-6 offset-3">
    <form class="validation-form" action="/campgrounds" method="POST" novalidate enctype="multipart/form-data">
      <div class="mb-3">
        <label class="form-label" for="title">Title</label>
        <input class="form-control" type="text" id="title" name="campground[title]" required/>
        <div class="invalid-feedback">
          Please provide a title.
        </div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="location">Location</label>
        <input class="form-control" type="text" id="location" name="campground[location]" required/>
        <div class="invalid-feedback">
          Please provide a valid location.
        </div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="price">Campground price</label>
        <div class="input-group">
          <span class="input-group-text" id="price-label">‚Ç¨</span>
          <input type="text" class="form-control" id="price" name="campground[price]" placeholder="0.00"
            aria-label="price" aria-describedby="price-label" required/>
            <div class="invalid-feedback">
              Please provide a valid price.
            </div>
        </div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="description">Description</label>
        <textarea class="form-control" type="text" id="description" name="campground[description]" required>
        </textarea>
        <div class="invalid-feedback">
          Please provide a valid description.
        </div>
      </div>
      <div class="input-group mb-3">
        <label for="image" class="input-group-text">üìÅ</label>
        <input class="form-control" type="file" id="image" name="image" multiple>
        <div class="invalid-feedback">
          Please provide a valid image.
        </div>
      </div>
      <div class="mb-3 d-flex">
        <button type="submit" class="btn btn-warning">Add Campground</button>
        <a class="btn btn-info ms-auto" href="/campgrounds">Back ü§Ø</a>
      </div>
    </form>
  </div>
</div>